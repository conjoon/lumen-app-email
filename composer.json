{
    "name": "conjoon/lumen-app-email",
    "description": "A backend service for IMAP/SMTP email messaging.",
    "license": "MIT",
    "type": "project",
    "repositories": [
        {"url": "https://horde-satis.maintaina.com", "type": "composer"},
        {
            "type": "path",
            "url": "../php-lib-conjoon",
            "symlink": true
        }
    ],
    "require": {
        "php": "^8.1",
        "conjoon/php-lib-conjoon": "@dev",
        "fruitcake/laravel-cors": "^2.0",
        "laravel/lumen-framework": "^8.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "lib/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\": "lib/tests/",
            "Tests\\": "lib/tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "horde/horde-installer-plugin": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-create-project-cmd": [
            "@php artisan install"
        ]
    },
    "authors": [
        {
            "name": "Thorsten Suckow-Homberg",
            "email": "thorsten@suckow-homberg.de"
        }
    ]
}
